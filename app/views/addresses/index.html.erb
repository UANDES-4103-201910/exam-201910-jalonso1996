<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Phone</th>
      <th>Line one</th>
      <th>Line two</th>
      <th>City</th>
      <th>Country</th>
      <th>Zip code</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.phone %></td>
        <td><%= address.line_one %></td>
        <td><%= address.line_two %></td>
        <td><%= address.city %></td>
        <td><%= address.country %></td>
        <td><%= address.zip_code %></td>
        <td><%= address.user %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

